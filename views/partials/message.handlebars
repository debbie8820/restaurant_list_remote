{{#if warning_msg}}
<div class="alert alert-warning" role="alert">
  {{{warning_msg}}}
</div>
{{/if}}

{{#if danger_msg}}
<div class="alert alert-danger" role="alert">
  {{{danger_msg}}}
</div>
{{/if}}

{{#if success_msg}}
<div class="alert alert-success" role="alert">
  {{{success_msg}}}
</div>
{{/if}}

{{#if errors}}
{{#each errors}}
<div class="alert alert-danger" role="alert">
  {{{this.msg}}}
</div>
{{/each}}
{{/if}}
<div id="wrapper">
  <div class="form-container">
    <div class="d-flex justify-content-center">
      <span class="form-heading">新增餐廳</span>
    </div>
    <form action="/create/new" method="POST">
      <div class="input-group">
        <label for="name">餐廳名稱</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="燒肉吧" required>
      </div>
      <div class="input-group">
        <label for="name_en">英文名稱</label>
        <input type="text" class="form-control" id="name_en" name="name_en" placeholder="Gusto Pizza">
      </div>
      <div class="input-group">
        <label for="category">類別</label>
        <input list="categories" name="category" class="form-control" id="category" placeholder="美式" required>
        <datalist id="categories">
          <option value="義式餐廳">
          <option value="中東料理">
          <option value="日本料理">
          <option value="酒吧">
          <option value="咖啡">
        </datalist>
      </div>
      <div class="input-group">
        <label for="image">圖片</label>
        <input type="url" class="form-control" id="image" name="image" placeholder="http://...">
      </div>
      <div class="input-group">
        <label for="location">地點</label>
        <input type="text" class="form-control" id="location" name="location" placeholder="台北市中正區連雲街 74 號">
      </div>
      <div class="input-group">
        <label for="phone">電話</label>
        <input type="tel" class="form-control" id="phone" name="phone" placeholder="0223557754">
      </div>
      <div class="input-group">
        <label for="google_map">Google Map</label>
        <input type="url" class="form-control" id="google_map" name="google_map" placeholder="http://...">
      </div>
      <div class="input-group">
        <label for="rating">評分</label>
        <input type="number" step="0.1" min="1" max="5" class="form-control" id="rating" placeholder="4.4" name="rating"
          required>
      </div>
      <div class="input-group">
        <label for="description">餐廳描述</label>
        <textarea class="form-control" id="description" name="description" placeholder="這是一間氣氛非凡的餐廳..."></textarea>
      </div>
      <div class="d-flex justify-content-center">
        <button class="saveButton" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>
<div id="wrapper">
  <div class="form-container">
    <span class="form-heading">Create restaurant</span>
    <form action="/create/new" method="POST">
      <div class="input-group">
        <label for="name">餐廳名稱</label>
        <input type="text" id="name" name="name" placeholder="燒肉吧" required>
      </div>
      <div class="input-group">
        <label for="name_en">英文名稱</label>
        <input type="text" id="name_en" name="name_en" placeholder="Gusto Pizza">
      </div>
      <div class="input-group">
        <label for="category">類別</label>
        <input list="categories" name="category" id="category" required>
        <datalist id="categories">
          <option value="義式餐廳">
          <option value="中東料理">
          <option value="日本料理">
          <option value="酒吧">
          <option value="咖啡">
        </datalist>
      </div>
      <div class="input-group">
        <label for="image">圖片網址</label>
        <input type="text" id="image" name="image" placeholder="http://...">
      </div>
      <div class="input-group">
        <label for="location">地點</label>
        <input type="text" class="form-control" id="location" name="location" placeholder="台北市中正區連雲街 74 號">
      </div>
      <div class="input-group">
        <label for="phone">電話</label>
        <input type="text" class="form-control" id="phone" name="phone" placeholder="0223557754">
      </div>
      <div class="input-group">
        <label for="google_map">Google Map位置</label>
        <input type="text" class="form-control" id="google_map" name="google_map" placeholder="http://...">
      </div>
      <div class="input-group">
        <label for="rating">評分</label>
        <input type="text" class="form-control" id="rating" placeholder="4.4" name="rating" required>
      </div>
      <div class="input-group">
        <label for="description">餐廳描述</label>
        <textarea class="form-control" id="description" name="description" placeholder="這是一間氣氛非凡的餐廳..."></textarea>
      </div>

      <button type="submit">Submit</button>
    </form>
  </div>
</div>
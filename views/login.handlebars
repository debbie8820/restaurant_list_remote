<div class="row m-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center m-3">Login</h1>
      {{>message}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" type="email" id="email" name="email" placeholder="Enter Email" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" id="password" name="password" placeholder="Enter Password"
            required>
        </div>
        <input type="submit" class="btn btn-warning btn-block text-white" value="Login">
        <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook</a>
      </form>
      <p class="lead mt-3">
        No account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>